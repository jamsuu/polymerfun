@import 'bespoke/animations.css'

*, *:after, *:before {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

html, body
  height: 100%
  font-size: 100%
  padding: 0
  margin: 0
  font-size: 1em

body
  font-family: 'Lato', Calibri, Arial, sans-serif
  color: #fff
  background: #333
  overflow: hidden

a
  transition: opacity .25s ease-in-out
  color: #303030
  opacity: 0.5

a:hover
  opacity: 1

pre
  width: 700px
  background: rgba(30,30,30,0.8)
  padding: 20px
  border-radius: 10px
  font-size: 1.2em
  line-height: 1.3em
  color: rgba(255,255,255,0.9)
  overflow: hidden
  margin: 0 auto
  .comment
    color: rgba(255,255,255,0.5)

p
  font-family: 'Open sans'
  font-size: 1.6em
  font-weight: 300
  line-height: 2emem

h1
  font-weight: 300
  font-size: 5.8em
  line-height: 1
  letter-spacing: 6px
  margin: 0
  width: 100%
  text-align: center
  text-transform: uppercase
  margin-bottom: 50px
  span
    letter-spacing: 6px
    font-weight: 400
    font-size: 25%
    text-transform: uppercase
    word-spacing: 0
    display: block
    opacity: 0.5
  strong
    color: rgba(30,30,30,0.6)

h2
  font-weight: 300
  font-size: 1.4em
  line-height: 1
  letter-spacing: 6px
  width: 100%
  text-align: center
  text-transform: uppercase
  word-spacing: -0.3em
  margin-bottom: 40px

.bespoke-parent
  position: relative
  width: 100%
  height: 100%
  -webkit-perspective: 600px
  -moz-perspective: 600px
  perspective: 600px
  overflow: hidden

.bespoke-scale-parent
  position: relative
  width: 100%
  height: 100%
  -webkit-perspective: 600px
  -moz-perspective: 600px
  perspective: 600px
  overflow: hidden
  pointer-events: none
  .bespoke-active
    pointer-events: auto

.bespoke-slide
  width: 100%
  height: 100%
  position: absolute
  display: block;
  top: 0
  left: 0
  visibility: hidden
  overflow: hidden
  -webkit-backface-visibility: hidden
  -moz-backface-visibility: hidden
  backface-visibility: hidden
  -webkit-transform: translate3d(0, 0, 0)
  -moz-transform: translate3d(0, 0, 0)
  transform: translate3d(0, 0, 0)
  -webkit-transform-style: preserve-3d
  -moz-transform-style: preserve-3d
  transform-style: preserve-3d
  display:-moz-box
  -moz-box-pack:center
  -moz-box-align:center
  display:-webkit-box
  -webkit-box-pack:center
  -webkit-box-align:center
  &.emerald
    background: #0ac2d2
  &.blue
    background: #7bb7fa
  &.green
    background: #60d7a9
  &.orange
    background: #fdc162
  &.red
    background: #fd6a62
  &.pink
    background: #f68dbb
  &.black
    background: #303030
    a
      color: #fff
  &.grey
    background: #f5f5f5
    color: #303030
  &.darkgrey
    background: #606060
  & > div
    width: 80%
    & > ul
      font-weight: 100
      & > li
        font-size: 1.6em
        line-height: 1.3em
        margin-bottom: 15px

.bespoke-inactive
  pointer-events: none

.bespoke-bullet-inactive
  opacity: 0
  pointer-events: none

.bespoke-backdrop
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  z-index: -1
  opacity: 0

.bespoke-backdrop-active
  opacity: 1

.bespoke-progress-parent
  position: absolute
  top: 0
  left: 0
  right: 0
  height: .3vw

.bespoke-progress-bar
  position: absolute
  height: 100%
  background: #ccc
  transition: width .6s ease

.emphatic
  background: #222

.emphatic-text
  color: white

.center
  text-align: center
  margin: 0 auto

.logo
  background: #fff
  display: block
  border-radius: 200px
  height: 200px
  width: 200px
  padding: 20px
  margin: 0 auto
  &.small
    width: 50px
    height: 50px
    padding: 5px
    border-radius: 50px

.author
  font-family: 'open sans', Helvetica, arial
  display: block
  text-align: center
  font-size: 1.5em
  opacity: 0.6
  margin-bottom: 20px

.bespoke-inactive
  visibility: hidden

.bespoke-active
  visibility: visible
  z-index: 1

.fx-transitioning-in, .fx-transitioning-out
  visibility: visible